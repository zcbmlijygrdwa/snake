void Clrscr()
{
    cout<<"\033[2J\033[1;1H";
}



void printSnake(Snake snake)
{
    Clrscr();
    s = "";
    for(int j = 0 ; j < 10 ; j++)
    {
        for(int k = 0 ; k < 10 ; k++)
        {
            if(snake->hasLocation(j,k))
            {
                s += " ";
            }
            else
            {
                s += "*";
            }
        }
        s+="\n"; 
    }
    cout<<s;
    usleep(100000);
} 

